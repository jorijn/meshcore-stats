{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "pinDigests": true
    },
    {
      "matchManagers": [
        "docker-compose"
      ],
      "matchPackageNames": [
        "ghcr.io/jorijn/meshcore-stats"
      ],
      "pinDigests": false
    }
  ]
}
